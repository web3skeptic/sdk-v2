{
  "name": "@circles-sdk-v2/sdk",
  "version": "0.1.0",
  "description": "Simplified Circles SDK for non-crypto users with low entrance barrier",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --format esm --splitting && tsc --emitDeclarationOnly",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "circles",
    "sdk",
    "simplified",
    "web3",
    "ubi"
  ],
  "license": "MIT",
  "dependencies": {
    "@circles-sdk-v2/types": "workspace:*",
    "@circles-sdk-v2/core": "workspace:*",
    "@circles-sdk-v2/rpc": "workspace:*",
    "@circles-sdk-v2/profiles": "workspace:*",
    "@circles-sdk-v2/utils": "workspace:*",
    "@circles-sdk-v2/runner": "workspace:*",
    "@circles-sdk-v2/pathfinder": "workspace:*",
    "@circles-sdk-v2/transfers": "workspace:*",
    "viem": "^2.38.0"
  },
  "devDependencies": {
    "typescript": "^5.0.4"
  }
}
