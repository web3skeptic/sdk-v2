{
  "name": "@circles-sdk/events",
  "version": "0.1.0",
  "description": "Event observation and subscription system for Circles SDK",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --format esm --splitting && tsc --emitDeclarationOnly",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "circles",
    "events",
    "observable",
    "subscription"
  ],
  "license": "MIT",
  "dependencies": {
    "@circles-sdk/types": "workspace:*",
    "@circles-sdk/abis": "workspace:*",
    "viem": "^2.21.54"
  }
}
