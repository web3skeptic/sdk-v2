{
  "name": "@circles-sdk/core",
  "version": "0.1.0",
  "description": "Circles Contracts wrapper",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm --splitting --external viem --external abitype --external @circles-sdk/abis --external @circles-sdk/types && tsc --emitDeclarationOnly",
    "build:bundle": "bun build ./src/index.ts --outdir ./dist --minify --external viem --external abitype",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@circles-sdk/abis": "workspace:*",
    "@circles-sdk/types": "workspace:*",
    "abitype": "^1.1.1",
    "viem": "^2.38.0"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@types/bun": "^1.2.23",
    "esbuild": "^0.25.10",
    "fix-esm-import-path": "^1.10.3",
    "typescript": "^5.0.4"
  }
}
